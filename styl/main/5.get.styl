#get
	@extend #for
.benefit
	display: table
	width 100%
	height 200px
	&-1
		margin-bottom: 30px
	&-title
	&-info
		display: table-cell
		vertical-align: middle
	&-title
		position relative
		background-image url(../img/icons/bracket.png)
		background-repeat no-repeat
		background-position: right center
		background-size: 65px 200px
		left -77px
		h4
			color: #f6c462
			transform: rotate(-90deg)
			text-align: center
			width 200px
	&-2
		.benefit-title
			background-size: 65px 130px
	&-info
		.general-text:last-of-type
			margin-bottom: 0