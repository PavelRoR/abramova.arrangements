@media screen and (min-width 1900px)
	#main
		background-position: center top -200px
@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	.general-text-iconed
		padding 0 225px 0 100px
	.advance
		max-width 380px
	.packet
		max-width 600px
@media screen and (max-width 1199px)
	.player-1::before
		right -10px
	.player-3::before
		left -10px
	.general-text-iconed
		margin-left: 0
		background-size: 60px
		padding 0 0 0 100px
	.packet
		max-width 440px
	.packet-body
		min-height 565px
@media screen and (max-width 991px)
	#logo
		display block
		float: none
		margin 0 auto 3px
	.contacts
	.header-contact
		text-align: center
		float: none
		line-height: 17px
	.contact
		margin 5px 5px 0
	#main
		background-position: center top
	.main-title
		max-width 470px
	.general-title span
		width 90%
		margin 0 auto
		display block
	.general-text-iconed
		padding-left: 80px
	.packet
		max-width 330px
	.packet-body
		min-height 745px
	#author
		background-image: none
@media screen and (max-width 767px)
	#main
		padding 40px 0
	.main-subtitle
		color: #fff
	.button-mt
		margin-top: 40px
	.players-title
		margin-bottom: 30px
	.player
		margin-bottom: 15px
		&:before
			content: none
	.benefit
		height auto
	.benefit
	.benefit-info, .benefit-title
		display block
	.benefit-title
		position: static
		background-image: none
		h4
			transform: none
			width 100%
			margin-bottom: 20px
			text-align: left
	.advance
		max-width 380px
		margin 0 auto
		&-text
			margin 20px 0 40px
	.advance-aftertext
		margin-top: 30px
	.packet
		max-width 380px
		margin 0 auto
		&-1
			margin-bottom: 70px
		&-body
			min-height 1px
@media screen and (max-width 485px)
	#logo
		width 68px
		height 30px
	.contact
		font-size: 12px
		background-position: left center
		background-size: 14px
		padding-left: 20px
	#main
		padding 30px 0
		text-align: center
	.main-title
		font-size: 28px
		line-height: 34px
		span
			display inline
	.main-subtitle
		font-size: 20px
		margin 20px 0 25px
	.video-wrapper-main
		margin 0 auto
	.button-container
		margin 20px auto 0
		padding 20px 20px 20px 100px
		background-size: 60px;
	.general-title
		font-size: 22px
	.general-text
		margin-bottom: 20px
	.course
		margin 40px 0
		padding 30px 20px 20px
	.how-subtitle
	.packet-body-title
		font-size: 20px
		margin-bottom: 30px
	.advance-text
		margin 5px 0 20px
	.advance-aftertext
	.packet
		padding 30px 20px 20px
	.author-list
		margin-top: 50px
	.author-list li
		margin-bottom: 10px
	#advances, #author, #how, #what, #for, #get, #prices, #revs
		padding 50px 0 30px
	footer
		padding 15px 0
		h5
			font-size: 18px
			line-height: 1.3
	.soc_buttons a
		margin 10px 5px
	footer #conditions, footer p
		font-size: 12px
		line-height: 1.2
	.contacts
		margin 5px 0
	.header-contact
		font-size: 14px
		a
			font-size: 14px;
			background-position: left center;
			background-size: 14px;
			padding-left: 20px;
@media screen and (max-width 385px)
	.button
		font-size: 16px
		line-height: 1.3
		padding 14px 10px
	.main-title
		font-size: 24px
	.main-subtitle
		margin 15px 0 20px
	.button-container
		padding 85px 15px 15px 15px
		background-position: top 15px center
	.button-mt
		margin-top: 30px
	.how-subtitle
	.packet-body-title
		margin-bottom: 20px
	.general-text-iconed
		padding 70px 0 0
		background-position: top center
	.packet-footer-aftertitle
		font-size: 22px
		span
			font-size: 28px